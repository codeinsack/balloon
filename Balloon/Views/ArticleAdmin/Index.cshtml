@model IEnumerable<Balloon.Models.Article>

@using Balloon.Models

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Управление комментариями</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayName("Имя пользователя")
        </th>
        <th>
            @Html.DisplayName("Заголовок")
        </th>
        <th>
            @Html.DisplayName("Дата")
        </th>
        <th>
            @Html.DisplayName("Содержание")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        @Html.Partial("_TableButtonsPartial", new SmallButtonModel { Id = item.ArticleId })
    </tr>
}
</table>
