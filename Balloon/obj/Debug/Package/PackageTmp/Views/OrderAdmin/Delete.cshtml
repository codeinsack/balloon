@model Balloon.Models.Order

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="width: 600px;">
    <h2>Удаление заказа</h2>

    <h3>Вы действительно хотите удалить заказ?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalSum)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TotalSum)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-danger" />
                @Html.Partial("_BackToListButtonPartial")
            </div>
        }
    </div>
</div>