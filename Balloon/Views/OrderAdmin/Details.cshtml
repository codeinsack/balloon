@model IEnumerable<Balloon.Models.Order>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="width: 600px;">
    <h2>Подробная информация по заказу</h2>

    <div>
        <hr />
        <table class="table table-condensed table-striped">
            <tr class="success">
                <th>Наименование</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Изображение</th>
                <th></th>
            </tr>
            @foreach (var order in Model)
            {
                foreach (var orderItems in order.OrderItems)
                {
                    <tr>
                        <td>@orderItems.Good.Name</td>
                        <td>@orderItems.Good.Price р.</td>
                        <td>@orderItems.Quantity шт.</td>
                        <td>
                            <img width="70" src="@Url.Action("GetImage", "Good", new { orderItems.GoodId })" />
                        </td>
                    </tr>
                }

            }
        </table>
