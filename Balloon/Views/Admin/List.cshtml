@model IEnumerable<Balloon.Models.Good>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Все товары</h1>

<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Наименование</th>
        <th>Цена</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GoodId</td>
            <td>@Html.ActionLink(item.Name, "Edit", new { item.GoodId })</td>
            <td>@item.Price р.</td>
            <td>
                @using (Html.BeginForm("Delete", "Admin"))
                {
                    @Html.Hidden("GoodId", item.GoodId)
                    <input type="submit" value="Удалить" />
                }
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Добавить новый товар", "Create")</p>
<p>@Html.ActionLink("Вернуться на сайт", "Index", "Home")</p>